<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" spacing="5.0">
	<children>
		<Text text="Login"/>
		<TextField fx:id="username"/>
		<TextField fx:id="password"/>
		<Text fx:id="error" text="Password or username is incorrect" visible="false"/>
		<HBox alignment="CENTER">
			<padding>
				<Insets top="5.0" bottom="5.0" left="5.0" right="5.0"/>
			</padding>
			<children>
				<Button fx:id="login" text="Login"/>
				<Pane HBox.hgrow="ALWAYS"/>
				<Button fx:id="cancel" text="Cancel"/>
			</children>
		</HBox>
	</children>
</fx:root>

