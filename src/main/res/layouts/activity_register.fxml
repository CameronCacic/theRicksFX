<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" spacing="5.0">
	<children>
		<HBox alignment="CENTER">
			<VBox.margin>
				<Insets bottom="20.0"/>
			</VBox.margin>
			<children>
				<Text text="Registration" style="-fx-font-size: 48pt;"/>
			</children>
		</HBox>
		<Text text="Username"/>
		<TextField fx:id="usernameEntry"/>
		<Text fx:id="invalidUsername" text="Username is invalid"/>
		<Text text="Password"/>
		<PasswordField fx:id="passwordEntry"/>
		<Text fx:id="invalidPassword" text="Password is invalid"/>
		<Text text="Re-enter Password"/>
		<PasswordField fx:id="passwordReentry"/>
		<Text fx:id="passwordMismatch" text="Passwords do not match"/>
		<HBox spacing="10.0" alignment="CENTER">
			<VBox.margin>
				<Insets bottom="20.0"/>
			</VBox.margin>
			<children>
				<RadioButton fx:id="normalPrivRadio" text="Normal"/>
				<RadioButton fx:id="adminPrivRadio" text="Admin"/>
			</children>
		</HBox>
		<HBox>
			<children>
				<Button fx:id="createAccount" text="Create Account"/>
				<Pane HBox.hgrow="ALWAYS"/>
				<Button fx:id="cancelAccount" text="Cancel"/>
			</children>
		</HBox>
	</children>
</fx:root>

